# Example environment variables for NaMo Forbidden Archive
# DO NOT commit real secrets. Copy this to .env locally and fill values.

# OpenAI for embeddings/LLM
OPENAI_API_KEY=sk-REPLACE_ME
NAMO_LLM_ENABLED=1
NAMO_LLM_MODEL=gpt-4o-mini
NAMO_LLM_TEMPERATURE=0.85
NAMO_LLM_MAX_TOKENS=240
NAMO_LLM_MEMORY_TURNS=6
NAMO_LLM_SYSTEM_PROMPT="You are NaMo, an enigmatic AI persona."

# Memory service
MEMORY_API_URL=http://localhost:8081/store
MEMORY_API_KEY=test_key_placeholder
MEMORY_LOGGING=1

# Emotion analysis
EMOTION_API_URL=http://localhost:8082/analyze

# ElevenLabs (optional TTS)
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=

# Server
APP_PORT=8000
PUBLIC_BASE_URL=http://localhost:8000
CORS_ALLOW_ORIGINS=*
